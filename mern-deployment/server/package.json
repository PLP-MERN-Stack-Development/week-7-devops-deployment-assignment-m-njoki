{
  "name": "mern-deployment-server",
  "version": "1.0.0",
  "description": "Production-ready server for MERN Deployment Assignment",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "jest --testPathPattern=tests",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage --testPathPattern=tests",
    "test:watch": "jest --watch --testPathPattern=tests",
    "setup-test-db": "node scripts/setupTestDb.js",
    "lint": "eslint src/ --fix",
    "lint:check": "eslint src/",
    "health": "node scripts/healthCheck.js",
    "logs": "pm2 logs",
    "monitor": "pm2 monit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "@sentry/node": "^7.80.0",
    "winston": "^3.11.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "mongodb-memory-server": "^9.1.3",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 10000
  }
}
